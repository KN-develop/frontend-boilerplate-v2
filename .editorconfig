[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[{composer.lock, .babelrc, .stylelintrc, .eslintrc, jest.config, *.json, *.jsb3, *.jsb2, *.bowerrc}]
indent_style = space
indent_size = 2

[*.svg]
indent_style = space
indent_size = 4

[.editorconfig]
indent_style = space
indent_size = 4

[{*.ats, *.ts}]
indent_style = space
indent_size = 4

[{jshint.json, *.jshintrc}]
indent_style = space
indent_size = 2

[*.js.map]
indent_style = space
indent_size = 2

[{*.yml, *.yaml}]
indent_style = space
indent_size = 2

